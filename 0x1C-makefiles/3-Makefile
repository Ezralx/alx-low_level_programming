CC = gcc
SRC = main.c school.c
OBJ =  $(SRC:.c=.o)
NAME = school
RM = rm -f

# make all
all: $(OBJ)
	$(CC) $(SRC) -o $(NAME)

# deletes tmp files & executable
clean:
	$(RM) *~ $(NAME)

# deletes object files
oclean:
	$(RM) $(OBJ)

# deletes all (tmp files, executable, & obj files)
fclean: clean oclean

# deletes all & recompiles all source files
re: oclean all